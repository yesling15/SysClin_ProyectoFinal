@model SysClin.Models.ViewModel.BloqueoHorarioViewModel

@{
    ViewBag.Title = "Editar bloqueo";
    Layout = ViewBag.Layout;
}

<h2>Editar bloqueo de horario</h2>
<hr />

<small class="text-muted d-block mb-3">
    Puede modificar la fecha de inicio/fin y las horas del bloqueo.
    Las horas deben estar dentro del rango válido y no deben superponerse con citas.
</small>

@using (Html.BeginForm("Editar", "BloqueoHorario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID_Bloqueo_Horario)
    @Html.HiddenFor(m => m.ID_Usuario)

    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

    <div class="card shadow-sm">
        <div class="card-body">

            @Html.LabelFor(m => m.Fecha_Inicio)
            @Html.TextBoxFor(m => m.Fecha_Inicio, "{0:yyyy-MM-dd}",
                new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.Fecha_Inicio, "", new { @class = "text-danger mb-3 d-block" })

            @Html.LabelFor(m => m.Hora_Inicio)
            @Html.TextBoxFor(m => m.Hora_Inicio,
                new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(m => m.Hora_Inicio, "", new { @class = "text-danger mb-3 d-block" })

            @Html.LabelFor(m => m.Fecha_Fin)
            @Html.TextBoxFor(m => m.Fecha_Fin, "{0:yyyy-MM-dd}",
                new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.Fecha_Fin, "", new { @class = "text-danger mb-3 d-block" })

            @Html.LabelFor(m => m.Hora_Fin)
            @Html.TextBoxFor(m => m.Hora_Fin,
                new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(m => m.Hora_Fin, "", new { @class = "text-danger mb-3 d-block" })

            <div class="mt-3">
                <button type="submit" class="btn btn-warning">Actualizar</button>
                <button type="button" class="btn btn-outline-secondary"
                        onclick="location.href='@Url.Action("Index", "BloqueoHorario")'">
                    Cancelar
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (ViewBag.Editado != null && (bool)ViewBag.Editado)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Bloqueo actualizado',
                text: 'Los cambios se guardaron correctamente.'
            }).then(() => {
                window.location.href = '@Url.Action("Index", "BloqueoHorario")';
            });
        </script>
    }
}
