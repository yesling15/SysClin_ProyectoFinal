@model SysClin.Models.ViewModel.ServicioViewModel

@{
    ViewBag.Title = "Editar servicio";
    Layout = ViewBag.Layout;
}

<h2>Editar servicio</h2>
<hr />

@using (Html.BeginForm("Editar", "Servicio", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID_Servicio)

    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

    <div class="card shadow-sm">
        <div class="card-body">

            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger mb-3 d-block" })

            @Html.LabelFor(m => m.Descripcion)
            @Html.TextAreaFor(m => m.Descripcion, 4, 50, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger mb-3 d-block" })

            @Html.LabelFor(m => m.Precio)
            @Html.TextBoxFor(m => m.Precio, "{0:0.##}", new { @class = "form-control", type = "number", step = "0.01" })
            @Html.ValidationMessageFor(m => m.Precio, "", new { @class = "text-danger mb-3 d-block" })

            <div class="mt-3">
                <button type="submit" class="btn btn-warning">Actualizar</button>
                <button type="button" class="btn btn-outline-secondary"
                        onclick="location.href='@Url.Action("Index", "Servicio")'">
                    Cancelar
                </button>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (ViewBag.Editado != null && (bool)ViewBag.Editado)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Servicio actualizado',
                text: 'Los cambios se guardaron correctamente.'
            }).then(() => {
                window.location.href = '@Url.Action("Index", "Servicio")';
            });
        </script>
    }
}
