@model SysClin.Models.ViewModel.PerfilProfesionalPublicoViewModel

@{
    ViewBag.Title = "Perfil profesional";
    Layout = ViewBag.Layout;
}

<h2>Perfil del profesional</h2>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-body">

        <h4 class="mb-1">@Model.NombreCompleto</h4>

        <p class="text-muted mb-1">
            <strong>Especialidad:</strong> @Model.Especialidad
        </p>

        <p class="text-muted">
            <strong>Lugar de atención:</strong> @Model.LugarAtencion
        </p>

        <div class="mt-3">
            <a href="@Url.Action("Ver", "Disponibilidad", new { idProfesional = Model.ID_Usuario })"
               class="btn btn-primary">
                Ver disponibilidad
            </a>
        </div>

    </div>
</div>


<!-- =============================
     SECCIÓN DE SERVICIOS
================================-->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5>Servicios disponibles</h5>
        <hr />

        @if (Model.Servicios == null || !Model.Servicios.Any())
        {
            <p class="text-muted">Este profesional no tiene servicios registrados.</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Servicio</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model.Servicios)
                    {
                        <tr>
                            <td>@s.Nombre</td>
                            <td>@(string.IsNullOrEmpty(s.Descripcion) ? "-" : s.Descripcion)</td>
                            <td>₡@s.Precio.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>