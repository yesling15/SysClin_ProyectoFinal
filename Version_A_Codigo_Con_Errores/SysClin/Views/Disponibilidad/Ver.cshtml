@model SysClin.Models.ViewModel.ConsultaDisponibilidadRequestViewModel

@{
    ViewBag.Title = "Consultar disponibilidad";
    Layout = ViewBag.Layout;
}

<h2>Disponibilidad del profesional</h2>
<hr />

<div class="card shadow-sm mb-4">
    <div class="card-body">

        <h4 class="mb-1">@ViewBag.NombreProfesional</h4>

        <p class="text-muted">
            Seleccione la fecha para consultar los horarios disponibles.
        </p>

        @using (Html.BeginForm("Ver", "Disponibilidad", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ID_Profesional)

            <div class="row g-3">

                <div class="col-md-4">
                    @Html.LabelFor(m => m.Fecha, "Fecha")
                    @Html.TextBoxFor(
                    m => m.Fecha,
                        new { @class = "form-control", type = "date", value = Model.Fecha.ToString("yyyy-MM-dd") }
                    )
                </div>

                <div class="col-md-4 align-self-end">
                    <button class="btn btn-primary w-100" type="submit">
                        Ver disponibilidad
                    </button>
                </div>

            </div>
        }
    </div>
</div>

<a href="@Url.Action("Perfil", "Profesional", new { id = Model.ID_Profesional })"
   class="btn btn-outline-secondary">
    Volver al perfil
</a>