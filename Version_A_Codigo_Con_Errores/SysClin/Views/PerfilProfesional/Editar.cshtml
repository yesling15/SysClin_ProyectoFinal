@model SysClin.Models.ViewModel.PerfilProfesionalViewModel

@{
    ViewBag.Title = "Editar perfil profesional";
    Layout = ViewBag.Layout;
}

<h2>Editar perfil profesional</h2>
<hr />

@using (Html.BeginForm("Editar", "PerfilProfesional", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

    @Html.HiddenFor(m => m.ID_Perfil_Profesional)
    @Html.HiddenFor(m => m.ID_Usuario)

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row">

                <!-- Columna izquierda -->
                <div class="col-md-6">

                    <!-- Especialidad -->
                    @Html.LabelFor(m => m.ID_Especialidad)
                    @Html.DropDownListFor(
                        m => m.ID_Especialidad,
                        (IEnumerable<SelectListItem>)ViewBag.Especialidades,
                        "-- Seleccione --",
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ID_Especialidad, "", new { @class = "d-block text-danger mb-2" })

                    <!-- Lugar de atención -->
                    @Html.LabelFor(m => m.Lugar_Atencion, new { @class = "mt-3" })
                    @Html.TextBoxFor(
                        m => m.Lugar_Atencion,
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Lugar_Atencion, "", new { @class = "d-block text-danger mb-2" })
                </div>

                <!-- Columna derecha: Política de anticipación -->
                <div class="col-md-6">
                    <h5>Política de cancelación y reprogramación</h5>
                    <p class="text-muted">
                        Configure con cuánta anticipación un paciente puede cancelar o
                        reprogramar una cita. Este ajuste es opcional.
                    </p>

                    @Html.LabelFor(m => m.Tiempo_Anticipacion)
                    @Html.TextBoxFor(
                        m => m.Tiempo_Anticipacion,
                        new { @class = "form-control", type = "number", step = "1" })
                    @Html.ValidationMessageFor(m => m.Tiempo_Anticipacion, "", new { @class = "d-block text-danger mb-2" })

                    @Html.LabelFor(m => m.Unidad_Anticipacion)
                    @Html.DropDownListFor(
                        m => m.Unidad_Anticipacion,
                        (IEnumerable<SelectListItem>)ViewBag.UnidadesAnticipacion,
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Unidad_Anticipacion, "", new { @class = "d-block text-danger mb-2" })

                    <small class="text-muted d-block mt-1">
                        Si define un tiempo de anticipación, debe seleccionar también una unidad.
                    </small>
                </div>

            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">Guardar cambios</button>
                <button type="button" class="btn btn-outline-secondary"
                        onclick="location.href='@Url.Action("Index", "Home")'">
                    Cancelar
                </button>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (ViewBag.EditarPerfilProfesionalExitoso != null && (bool)ViewBag.EditarPerfilProfesionalExitoso)
    {
        <script>
        Swal.fire({
            icon: 'success',
            title: 'Perfil profesional actualizado',
            text: 'Los cambios han sido guardados correctamente.'
        }).then(function () {
            window.location.href = '@Url.Action("Index", "Home")';
        });
        </script>
    }
}
